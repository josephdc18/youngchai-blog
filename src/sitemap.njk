---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
    <!-- Homepage -->
    <url>
        <loc>https://{{ client.domain }}/</loc>
        <xhtml:link rel="alternate" hreflang="en" href="https://{{ client.domain }}/"/>
        <xhtml:link rel="alternate" hreflang="ko" href="https://{{ client.domain }}/ko/"/>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>
    <url>
        <loc>https://{{ client.domain }}/ko/</loc>
        <xhtml:link rel="alternate" hreflang="en" href="https://{{ client.domain }}/"/>
        <xhtml:link rel="alternate" hreflang="ko" href="https://{{ client.domain }}/ko/"/>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>
    
    <!-- Static Pages -->
    <url>
        <loc>https://{{ client.domain }}/about/</loc>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://{{ client.domain }}/contact/</loc>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://{{ client.domain }}/archive/</loc>
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
    </url>
    
    <!-- English Blog Posts -->
    {%- for post in collections.posts_en %}
    <url>
        <loc>https://{{ client.domain }}{{ post.url }}</loc>
        <lastmod>{{ post.date | date("yyyy-MM-dd") }}</lastmod>
        <xhtml:link rel="alternate" hreflang="en" href="https://{{ client.domain }}{{ post.url }}"/>
        <xhtml:link rel="alternate" hreflang="ko" href="https://{{ client.domain }}/ko{{ post.url | replace('/blog/', '/blog/') }}"/>
        <changefreq>monthly</changefreq>
        <priority>0.9</priority>
    </url>
    {%- endfor %}
    
    <!-- Korean Blog Posts -->
    {%- for post in collections.posts_ko %}
    <url>
        <loc>https://{{ client.domain }}{{ post.url }}</loc>
        <lastmod>{{ post.date | date("yyyy-MM-dd") }}</lastmod>
        <xhtml:link rel="alternate" hreflang="ko" href="https://{{ client.domain }}{{ post.url }}"/>
        <changefreq>monthly</changefreq>
        <priority>0.9</priority>
    </url>
    {%- endfor %}
    
    <!-- Category Pages -->
    {%- for cat in categories.categories %}
    <url>
        <loc>https://{{ client.domain }}/blog/{{ cat.slug | lower }}/</loc>
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
    </url>
    {%- endfor %}
</urlset>

